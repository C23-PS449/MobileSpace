<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            android:elevation="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:drawableTop="@drawable/baseline_refresh_24"
            android:text="@string/muat_ulang"
            android:id="@+id/refresh_detail"
            android:visibility="gone"/>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/card_view1"
        android:layout_margin="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:padding="8dp"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_margin="8dp"
                tools:src="@tools:sample/avatars"
                android:scaleType="fitXY"
                android:id="@+id/image_hasil_deteksi"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:contentDescription="@string/gambar_penyakit"
                app:layout_constraintEnd_toEndOf="parent"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textStyle="bold"
                android:padding="8dp"
                android:id="@+id/nama_penyakit"
                app:layout_constraintTop_toBottomOf="@id/image_hasil_deteksi"
                app:layout_constraintStart_toStartOf="parent"
                android:text="@string/nama_penyakit"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:padding="8dp"
                android:textStyle="bold"
                android:id="@+id/nama_alternatif_penyakit"
                app:layout_constraintTop_toBottomOf="@id/nama_penyakit"
                app:layout_constraintStart_toStartOf="parent"
                android:text="@string/nama_alternatif_penyakit"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/card_view2"

        app:layout_constraintTop_toBottomOf="@id/card_view1"
        android:layout_margin="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:padding="8dp"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textStyle="bold"
                android:padding="8dp"
                android:id="@+id/label_detail_penyakit"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:text="@string/infomrasi_penyakit"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:padding="8dp"
                android:id="@+id/detail_penyakit"
                app:layout_constraintTop_toBottomOf="@id/label_detail_penyakit"
                app:layout_constraintStart_toStartOf="parent"
                android:text="@string/detail_penyakit"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textStyle="bold"
                android:padding="8dp"
                android:id="@+id/label_penyembuhan_penyakit"
                app:layout_constraintTop_toBottomOf="@id/detail_penyakit"
                app:layout_constraintStart_toStartOf="parent"
                android:text="@string/pencegahan_dan_penyembuhan_penyakit"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:padding="8dp"
                android:id="@+id/penyembuhan_penyakit"
                app:layout_constraintTop_toBottomOf="@id/label_penyembuhan_penyakit"
                app:layout_constraintStart_toStartOf="parent"
                android:text="@string/pencegahan_dan_penyembuhan_penyakit"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/card_view3"

        android:layout_margin="8dp"
        app:layout_constraintTop_toBottomOf="@id/card_view2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:padding="8dp"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:padding="8dp"
                android:textSize="18sp"
                android:textStyle="bold"
                android:id="@+id/label_produk_tersedia"
                android:text="@string/tips_dan_trik"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/label_produk_tersedia"
                app:layout_constraintStart_toStartOf="parent"
                android:padding="8dp"
                android:text="@string/need_something"
                android:id="@+id/tips_and_trik"
                android:textSize="16sp"
                />
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/tips_and_trik"
                app:layout_constraintStart_toStartOf="parent"
                android:text="@string/check_now"
                android:id="@+id/go_to_shop"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/kembali_ke_halaman_utama"
            android:id="@+id/Back_To_Home"
            app:layout_constraintTop_toBottomOf="@id/card_view3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>