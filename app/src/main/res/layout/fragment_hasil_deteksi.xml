<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/card_view1"
        app:strokeWidth="2dp"
        app:cardElevation="15dp"
        android:layout_margin="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_margin="8dp"
                tools:src="@tools:sample/avatars"
                android:scaleType="fitXY"
                android:id="@+id/image_hasil_deteksi"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:textStyle="bold"
                android:padding="8dp"
                android:id="@+id/nama_penyakit"
                app:layout_constraintTop_toBottomOf="@id/image_hasil_deteksi"
                app:layout_constraintStart_toStartOf="parent"
                android:text="@string/nama_penyakit"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:padding="8dp"
                android:textStyle="bold"
                android:id="@+id/nama_alternatif_penyakit"
                app:layout_constraintTop_toBottomOf="@id/nama_penyakit"
                app:layout_constraintStart_toStartOf="parent"
                android:text="@string/nama_alternatif_penyakit"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:strokeWidth="2dp"
        android:id="@+id/card_view2"
        app:cardElevation="15dp"
        app:layout_constraintTop_toBottomOf="@id/card_view1"
        android:layout_margin="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:textStyle="bold"
                android:padding="8dp"
                android:id="@+id/label_detail_penyakit"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:text="@string/infomrasi_penyakit"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:padding="8dp"
                android:id="@+id/detail_penyakit"
                app:layout_constraintTop_toBottomOf="@id/label_detail_penyakit"
                app:layout_constraintStart_toStartOf="parent"
                android:text="@string/detail_penyakit"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:textStyle="bold"
                android:padding="8dp"
                android:id="@+id/label_penyembuhan_penyakit"
                app:layout_constraintTop_toBottomOf="@id/detail_penyakit"
                app:layout_constraintStart_toStartOf="parent"
                android:text="@string/pencegahan_dan_penyembuhan_penyakit"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:padding="8dp"
                android:id="@+id/penyembuhan_penyakit"
                app:layout_constraintTop_toBottomOf="@id/label_penyembuhan_penyakit"
                app:layout_constraintStart_toStartOf="parent"
                android:text="@string/pencegahan_dan_penyembuhan_penyakit"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/card_view3"
        app:strokeWidth="2dp"
        app:cardElevation="15dp"
        android:layout_margin="8dp"
        app:layout_constraintTop_toBottomOf="@id/card_view2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:padding="8dp"
                android:textSize="18dp"
                android:textStyle="bold"
                android:id="@+id/label_produk_tersedia"
                android:text="Produk yang tersedia untuk pengobatan"/>

            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/label_produk_tersedia"
                android:padding="8dp"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/kembali_ke_halaman_utama"
            app:layout_constraintTop_toBottomOf="@id/card_view3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>